{
  "name": "operations_dashboard",
  "bundleId": "com.ipelia.yoobicdashboard",
  "description": "Retail Excellence",
  "main": "main-electron.js",
  "author": "Yoobic",
  "dependencies": {
    "compression": "^1.6.2",
    "electron-updater": "^2.18.2",
    "express": "^4.13.4",
    "express-sslify": "^1.0.1",
    "helmet": "3.5.0"
  },
  "version": "6.0.16",
  "scripts": {
    "pack:dev": "electron-builder --dir",
    "pack:prod": "electron-builder --win --mac",
    "pack:publish": "electron-builder --win --mac -p always"
  },
  "build": {
    "appId": "com.ipelia.yoobicdashboard",
    "productName": "OperationsDashboard",
    "directories": {
      "buildResources": "dist/",
      "output": "electron",
      "app": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Yoobic",
        "repo": "yoobic-electron"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "dist/assets/logo/operations_mac"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "dist/assets/logo/operations_win"
    }
  }
}